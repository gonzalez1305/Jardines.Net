@page
@model ICBFApp.Pages.Roles.EditModel
@{
}
<br>

<h2>Editar Rol</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show " role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}

<form method="post">
    <input type="hidden" asp-for="rolInfo.IdRol" />

    <div class="row mb-3">
        <label class="col-form-label-sm col-form-label" for="SelectedRol">Selecciona un Rol</label>
        <div class="col-sm-6">
            <select asp-for="rolInfo.Rol" class="form-control">
                <option value="">Selecciona un Rol</option>
                <option value="Administrador">Administrador</option>
                <option value="Madre Comunitaria">Madre Comunitaria</option>
                <option value="Acudiente">Acudiente</option>
            </select>
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label=""></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid gap-2 d-md-flex justify-content-md-end">
            <button type="submit" class="btn btn-primary btn-lg me-md-1">Submit</button>
            <a class="btn btn-outline-primary btn-lg" href="/Roles/Index" role="button">Cancel</a>
        </div>
    </div>
</form>

@page
@model ICBFApp.Pages.Roles.IndexModel
@{
}

<br />
<h2>Lista de Roles</h2>
<a class="btn btn-primary btn-sm" href="/Roles/CrearRol">Nuevo Rol</a>

<table class="table">
	<thead>
		<tr>
			<td>ID</td>
			<td>Rol</td>
			<td>acciones</td>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.listRol)
		{
			<tr>
				<td>@item.IdRol</td>
				<td>@item.Rol</td>
				<td>
					<a class="btn btn-primary btn-sm" href="/Roles/Edit?IdRol=@item.IdRol">Editar</a>
					<a class="btn btn-danger btn-sm" href="/Roles/Delete?IdRol=@item.IdRol">Eliminar</a>
				</td>
			</tr>
		}
	</tbody>
</table>

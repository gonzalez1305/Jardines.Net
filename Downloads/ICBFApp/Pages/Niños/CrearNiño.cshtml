@page
@model ICBFApp.Pages.Niños.CrearNiñoModel
@{
}
<br>
<h2>Agregar Nuevo Niño</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}

<form method="POST">
    <div class="row mb-3">
        <label class="col-form-label-sm col-form-label">Nombre</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Nombre" value="@Model.niñoInfo.Nombre">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-form-label-sm col-form-label" for="SelectedTipoSangre">Selecciona un Tipo de sangre</label>
        <div class="col-sm-6">
            <select name="TipoSangre" value="@Model.niñoInfo.TipoSangre" class="form-control">
                <option value="">Selecciona un tipo de sangre</option>
                <option value="A+">A+</option>
                <option value="A-">A-</option>
                <option value="B+">B+</option>
                <option value="B-">B-</option>
                <option value="O+">O+</option>
                <option value="0-">O-</option>
            </select>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-form-label-sm col-form-label">CiudadNacimiento</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="CiudadNacimiento" value="@Model.niñoInfo.CiudadNacimiento">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-form-label-sm col-form-label">Telefono</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Telefono" value="@Model.niñoInfo.Telefono">
        </div>
    </div>
      <div class="row mb-3">
        <label class="col-form-label-sm col-form-label">Edad</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Edad" value="@Model.niñoInfo.Edad">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-form-label-sm col-form-label">Direccion</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Direccion" value="@Model.niñoInfo.Direccion">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-form-label-sm col-form-label" for="SelectedEPS">Selecciona una EPS</label>
        <div class="col-sm-6">
            <select name="EPS" value="@Model.niñoInfo.EPS" class="form-control">
                <option value="">Selecciona una Eps</option>
                <option value="NUEVA EPS">NUEVA EPS</option>
                <option value="Compensar">Compensar</option>
                <option value="Cafam">Cafam</option>
            </select>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-form-label-sm col-form-label">Identificacion</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Identidad" value="@Model.niñoInfo.Identidad">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-form-label-sm col-form-label" for="Jardin">Seleccione un Jardín</label>
        <div class="col-sm-6">
            <select id="Jardin" name="Jardin" class="form-control">
                <option value="">Seleccione un Jardín</option>
                @foreach (var jardin in Model.jardinInfo)
                {
                    <option value="@jardin.Identificador">@jardin.Nombre</option>
                }
            </select>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-form-label-sm col-form-label" for="Persona">Seleccione un Acudiente</label>
        <div class="col-sm-6">
            <select id="Persona" name="Persona" class="form-control">
                <option value="">Seleccione una Persona</option>
                @foreach (var persona in Model.personaInfo)
                {
                    <option value="@persona.Identificacion">@persona.Nombre</option>
                }
            </select>
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/Niños/Index" role="button">Cancel</a>
        </div>
    </div>
</form>

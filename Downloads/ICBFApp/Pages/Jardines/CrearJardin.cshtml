@page
@model ICBFApp.Pages.Jardines.CrearJardinModel
@{
}

<br>

    <h2>Agregar nuevo Jardin</h2>

    @if (Model.errorMessage.Length > 0)
    {
        <div class="alert alert-warning alert-dismissible fade show " role="alert">
            <strong>@Model.errorMessage</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
        </div>
    }

    <form method="post">
        <div class="row mb-3">
            <label class="col-form-label-sm col-form-label">Nombre Jardin</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="Nombre"  />
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-form-label-sm col-form-label">Direccion Jardin</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="Direccion" />
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-form-label-sm col-form-label" for="SelectedIdentificadorjardin">Selecciona un Jardin</label>
            <div class="col-sm-6">
                <select name="Estado" value="@Model.jardinInfo" class="form-control">
                    <option value="">Selecciona un Estado</option>
                    <option value="Aprobado">Aprobado</option>
                    <option value="En Tramite">En Tramite</option>
                    <option value="Negado">Negado</option>
                </select>
            </div>
        </div>

        @if (Model.succesMessage.Length > 0)
        {
            <div class="row mb-3">
                <div class="col-sm-9">
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>@Model.succesMessage</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label=""></button>
                    </div>
                </div>
            </div>
        }

        <div class="row mb-3">
            <div class="offset-sm-3 col-sm-3 d-grid gap-2 d-md-flex justify-content-md-end">
                <button type="submit" class="btn btn-primary btn-lg me-md-1">Submit</button>
                <a class="btn btn-outline-primary btn-lg" href="/Jardines/Index" role="button">Cancel</a>
            </div>
        </div>

    </form>


@page
@model ICBFApp.Pages.Jardines.EditModel
@{
}

<br>

<h2>Editar Jardín</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show " role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}

<form method="post">
    <input type="hidden" asp-for="jardinInfo.Identificador" />

    <div class="row mb-3">
        <label class="col-form-label-sm col-form-label">Nombre Jardín</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" asp-for="jardinInfo.Nombre" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-form-label-sm col-form-label">Dirección Jardín</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" asp-for="jardinInfo.Direccion" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-form-label-sm col-form-label">Estado</label>
        <div class="col-sm-6">
            <select asp-for="jardinInfo.Estado" class="form-control">
                <option value="">Selecciona un Estado</option>
                <option value="Aprobado">Aprobado</option>
                <option value="En Tramite">En Tramite</option>
                <option value="Negado">Negado</option>
            </select>
        </div>
    </div>

    @if (Model.succesMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.succesMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label=""></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid gap-2 d-md-flex justify-content-md-end">
            <button type="submit" class="btn btn-primary btn-lg me-md-1">Submit</button>
            <a class="btn btn-outline-primary btn-lg" href="/Jardines/Index" role="button">Cancel</a>
        </div>
    </div>
</form>
